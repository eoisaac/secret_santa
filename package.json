{
  "name": "urbus",
  "repository": {
    "url": "https://github.com/eoisaac/urbus",
    "type": "git"
  },
  "author": {
    "name": "Isaac Santiago",
    "url": "https://eoisaac.vercel.app/"
  },
  "license": "MIT",
  "readme": "README.md",
  "version": "1.0.0",
  "description": "UrBus, a mobile bus tracking app",
  "private": true,
  "scripts": {
    "======= Linting =======": "==============================================",
    "lint:fix": "turbo run lint:fix",
    "lint:check": "turbo run lint:check",
    "======= Testing =======": "==============================================",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:e2e": "turbo run test:e2e",
    "======= Build =======": "================================================",
    "build": "turbo run build",
    "======= Utility =======": "==============================================",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "======= Repo =======": "=================================================",
    "@linting": "pnpm --filter linting",
    "@web": "pnpm --filter web",
    "@server": "pnpm --filter server",
    "======= Cleaning =======": "=============================================",
    "clean": "turbo run clean; rm -rf ./node_modules; rm -f pnpm-lock.yaml",
    "clean:build": "turbo run clean:build",
    "clean:install": "pnpm clean; pnpm install",
    "======= Dev =======": "==================================================",
    "dev": "turbo run dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}